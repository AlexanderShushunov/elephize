{
  "compilerOptions": {
    "moduleResolution": "node",
    "lib": ["es2019"],
    "target": "es5",
    "experimentalDecorators": true,
    "jsx": "react",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],
    "baseUrl": ".",
    "outDir": "./dist"
  },
  "exclude": [
    "demo/**/*",
    "dist/**/*",
    "src/__tests__/watchSpecimens.~/**/*",
    "node_modules/**/*"
  ]
}
